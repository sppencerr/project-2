<article class="post my-3">
    <div class="post-head p-2 d-flex flex-row align-items-center justify-content-between">
        <h3 class="post-title lead">
            <a href="/post/{{this.id}}" class="clean-link post-title">{{this.post_title}}</a>
        </h3>
        <p class="post-author text-muted">posted by {{user.username}} on {{format_date created_at}}</p>
    </div>
    <div class="post-body text-dark p-2">
        {{post_body}}
    </div>
    <div class="post-meta px-2 pt-2 text-muted">
        <p>
            <button type="button" class="clean-link btn-vote-count" id="{{id}}" {{#if vote_count}}{{else}}disabled{{/if}}>{{vote_count}} {{format_plural 'point'
                vote_count}}</button> |
            <a href="/post/{{id}}" class="clean-link">{{comments.length}} {{format_plural 'comment'
                comments.length}}</a>
        </p>
        <div>
            {{#if vote_count}}
            <p class="post-votes" style="display: none;">liked by{{#each votes as |vote|}} {{vote.user.username}}{{/each}}</p>
            {{/if}}
        </div>
    </div>
</article>