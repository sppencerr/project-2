<article class="post">
    <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{post_url}})</span>
    </div>
    <div class="meta">
        Post from {{user.username}} on {{created_at}} 
        <a href="/post/{{id}}">{{comments.length}} comments</a>
    </div>
</article>